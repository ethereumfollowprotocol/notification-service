{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksVersion": "1.19.0",
    "dockerfilePath": "./Dockerfile"
  },
  "deploy": {
    "startCommand": "bun ./src/index.ts",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 4
  }
}
